<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--Font size for regular text-->
    <style name="FontSizeSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!--Font size for sub headlines-->
    <style name="FontSizeMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Font size for headlines-->
    <style name="FontSizeLarge">
        <item name="android:textSize">30sp</item>
    </style>


</resources>
